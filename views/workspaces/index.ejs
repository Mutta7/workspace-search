<h2 class="center">Workspaces Table</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% workspaces.forEach(workspace=> { %>
    <tr>
      <td>
        <a href="<%= `/workspaces/${workspace._id}` %>">
          <%= workspace.name %>
        </a>
      </td>
      <td>
        <%= workspace.address %>
      </td>
      <td>
        <a href="<%=`workspaces/${workspace._id}/edit`%>">
          Edit
        </a>
      </td>
      <td>
        <a href="<%= `workspaces/${workspace._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>